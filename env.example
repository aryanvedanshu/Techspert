# ===========================================
# Techspert - Online Course Platform
# Environment Configuration
# ===========================================

# Database Configuration
MONGO_URI=mongodb://admin:password123@localhost:27017/techspert?authSource=admin
MONGO_URI_TEST=mongodb://admin:password123@localhost:27017/techspert_test?authSource=admin

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost

# JWT Configuration
JWT_SECRET=techspert-super-secret-jwt-key-2024
JWT_REFRESH_SECRET=techspert-refresh-secret-key-2024
JWT_EXPIRE=15m

# Cloudinary Configuration (Demo - Replace with real credentials)
CLOUDINARY_CLOUD_NAME=techspert-demo
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=demo-secret-key

# Email Configuration (Optional - for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Admin Configuration (Seeded Account)
ADMIN_EMAIL=super-admin@techspert.ai
ADMIN_PASSWORD=Admin123

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
PLAUSIBLE_DOMAIN=techspert.com

# Social Media Links
GITHUB_URL=https://github.com/techspert
TWITTER_URL=https://twitter.com/techspert
LINKEDIN_URL=https://linkedin.com/company/techspert
YOUTUBE_URL=https://youtube.com/techspert

# Contact Information
CONTACT_EMAIL=contact@techspert.com
SUPPORT_EMAIL=support@techspert.com
PHONE_NUMBER=+1-555-123-4567
ADDRESS=123 Tech Street, San Francisco, CA 94105

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=true
ENABLE_RATINGS=true
ENABLE_CERTIFICATES=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=techspert-session-secret-2024
CORS_ORIGIN=http://localhost

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# Frontend Environment Variables
# ===========================================

# API Configuration
VITE_API_URL=http://localhost/api
VITE_APP_NAME=Techspert
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false

# Branding
VITE_APP_LOGO=/logo.png
VITE_FAVICON=/favicon.ico