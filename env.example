# Database Configuration
MONGO_URI=mongodb://localhost:27017/techspert
MONGO_URI_TEST=mongodb://localhost:27017/techspert_test

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Admin Configuration
ADMIN_EMAIL=admin@techspert.com
ADMIN_PASSWORD=ChangeMe123!

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
PLAUSIBLE_DOMAIN=techspert.com

# Social Media Links
GITHUB_URL=https://github.com/techspert
TWITTER_URL=https://twitter.com/techspert
LINKEDIN_URL=https://linkedin.com/company/techspert
YOUTUBE_URL=https://youtube.com/techspert

# Contact Information
CONTACT_EMAIL=contact@techspert.com
SUPPORT_EMAIL=support@techspert.com
PHONE_NUMBER=+1-555-123-4567
ADDRESS=123 Tech Street, San Francisco, CA 94105

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=true
ENABLE_RATINGS=true
ENABLE_CERTIFICATES=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_INTERVAL=30000